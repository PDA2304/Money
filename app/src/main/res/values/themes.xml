<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Money" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>

    </style>

    <style name="BottomNavigationView"  parent="Widget.Design.BottomNavigationView">
        <item name="android:itemBackground">@color/blue</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearanceInactive">@style/TextStyleBNV</item>
        <item name="itemTextAppearanceActive">@style/TextStyleBNV</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/blue</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/btn_textSize</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextInformation">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSizeInformation</item>
        <item name="android:textColor">@color/information</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">@dimen/btn_textSize</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ButtonDialog">
        <item name="android:textSize">@dimen/btn_dialog_textSize</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="CardViewProfile">
        <item name="android:background">@color/white</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">@color/blue</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/blue</item>
        <item name="android:colorForeground">@color/information</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="TextDialogBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_textSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDialogContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextHeader" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>