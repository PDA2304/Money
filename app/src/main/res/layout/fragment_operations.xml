                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <at.markushi.ui.CircleButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_shopping_foreground"
