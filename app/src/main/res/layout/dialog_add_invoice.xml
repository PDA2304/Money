<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        style="@style/TextDialogBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Добавление счета" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="25"
                    app:hintTextAppearance="@style/EditTextHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue"
                        android:hint="Название счета"
                        android:maxLength="25" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/type_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/spinner_invoice_item"
                    android:spinnerMode="dropdown" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cost_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:hintTextAppearance="@style/EditTextHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue"
                        android:hint="Начальное состояние счета"
                        android:inputType="number"
                        android:maxLength="12"
                        android:text="0" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/ButtonDialog"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Отмена" />

            <Button
                android:id="@+id/btn_insert_invoice"
                style="@style/ButtonDialog"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Сохранить" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>